<div class='row'>
  <div class='col-xs-7'>
  <h2>ストレッチ詳細</h2>
    <%= attachment_image_tag @stretch, :image, :fill, 500, 500 %>
  </div>
  <div class='col-xs-5'>
    <div class='row'>
      <div class='col-xs-5'>
        <h4>ストレッチ名</h4>
      </div>
      <div class='col-xs-5'>
        <span><h4><%= @stretch.name %></h4></span>
      </div>
    </div>

    <div class='row'>
      <div class='col-xs-5'>
        <h4>作用する筋肉</h4>
      </div>
      <div class='col-xs-5'>
        <span><h4><%= @stretch.action_muscles %></h4></span>
      </div>
    </div>

    <div class='row'>
      <div class='col-xs-5'>
        <h4>ストレッチ説明</h4>
      </div>
      <div class='col-xs-5'>
        <span><h4><%= @stretch.explanation %></h4></span>
      </div>
    </div>

    <div class='row'>
      <div class='col-xs-5'>
        <h4>カテゴリー</h4>
      </div>
      <div class='col-xs-5'>
        <span><h4></h4></span>
      </div>
    </div>
    <div class='col-xs-offset-10'>
    <%= link_to "編集する", edit_admins_stretch_path(@stretch.id), class:"btn btn-info" %>
    </div>
  </div>
</div>