<div class='container'>
  <div class='row'>
    <h2>ストレッチ詳細</h2>
    <div class='col-md-6'>
      <%= attachment_image_tag @stretch, :image, :fill, 500, 400 %>
    </div>
    <div class='col-md-6'>
          <h3 class='admin-text'>ストレッチ名</h3>
          <h4><%= @stretch.name %></h4>
          <h3 class='admin-text'>作用する筋肉</h3>
          <h4><%= @stretch.action_muscles %></h4>
          <h3 class='admin-text'>ストレッチ説明</h3>
          <h4><%= @stretch.explanation %></h4>
          <h3 class='admin-text'>カテゴリー</h3>
          <h4><%= @stretch.category.name %></h4>
      <div class='col-xs-offset-10'>
        <%= link_to "編集する", edit_admins_stretch_path(@stretch.id), class:"btn btn-info" %>
      </div>
    </div>
  </div>
</div>
