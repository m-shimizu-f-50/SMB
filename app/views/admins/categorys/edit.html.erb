<% if flash[:alert] %>
  <div class="row alert alert-warning">
    <%= flash[:alert] %>
  </div>
<% end %>
<div class='container'>
  <div class='row'>
    <h2>カテゴリー編集</h2>
    <%= form_for(@category, url:"/admins/categorys/#{@category.id}") do |f| %>
      <div class='col-xs-2'>
        <%= f.label :name, 'カテゴリー' %>
      </div>
      <div class='col-xs-3'>
        <%=f.text_area :name %>
      </div>
      <div class='col-xs-2'>
        <%= f.radio_button :is_valid, :有効 %>
        <%= f.label :有効 %>
      </div>
      <div class='col-xs-2'>
        <%= f.radio_button :is_valid, :無効 %>
        <%= f.label :無効 %>
      </div>
      <div class='col-xs-3'>
        <%= f.submit '変更を保存する',class:'btn btn-info' %>
      </div>
    <% end %>
  </div>
</div>