<% if flash[:alert] %>
  <div class="row alert alert-warning">
    <%= flash[:alert] %>
  </div>
<% end %>
<div class='container'>
  <div class='row'>
    <h2>カテゴリー一覧</h2>
    <div class='col-xs-12'>
      <div class='row'>
        <%= form_for(@category, url:'/admins/categorys') do |f| %>
          <div class='col-xs-2'>
            <%= f.label :name ,'カテゴリー' %>
          </div>
          <div class='col-xs-3'>
            <%= f.text_area :name %>
          </div>
          <div class='col-xs-2'>
            <%= f.radio_button :is_valid, :有効 %>
            <%= f.label :有効 %>
          </div>
          <div class='col-xs-2'>
            <%= f.radio_button :is_valid, :無効 %>
            <%= f.label :無効 %>
          </div>
          <div class='col-xs-3'>
            <%= f.submit '追加', class:'btn btn-info' %>
          </div>
        <% end %>
      </div>

      <table class='table'>
        <thead>
          <th>カテゴリ</th>
          <th>状態</th>
          <th></th>
        </thead>
        <tbody>
          <% @categorys.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.is_valid %></td>
            <td><%= link_to '編集する',edit_admins_category_path(category.id),data: {"turbolinks" => false} %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>