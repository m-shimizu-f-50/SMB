<div class='container'>
  <div class='row'>
    <h2>会員一覧</h2>
  </div>
  <div class='row'>
    <table class='table'>
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%=user.id %>
            </td>
            <td>
              <%= link_to "#{user.family_name} #{user.first_name}", admins_user_path(user) %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td><%= user.show_validation %></td>
          </tr>
        <% end %>
      </tbody>