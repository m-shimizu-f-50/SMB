<header>
  <div id="navArea">
    <nav>
      <div class="inner">
        <ul>
          <%= link_to (root_path),data: {"turbolinks" => false} do %>
            <%= image_tag 'logo.jpg', id: "logo" %>
          <% end %>
          <% if user_signed_in? %>
            <li>
              <%= link_to user_path(current_user), data: {"turbolinks" => false} do %>
                <i class='glyphicon glyphicon-user'>マイページ</i>
              <% end %>
            </li>
            <li>
              <%= link_to about_path,data: {"turbolinks" => false} do %>
                <i class="glyphicon glyphicon-link" aria-hidden="true">紹介</i>
              <% end %>
            </li>
            <li>
              <%= link_to stretchs_path, data: {"turbolinks" => false} do %>
                <i class="glyphicon glyphicon-list-alt" aria-hidden="true">ストレッチ一覧</i>
              <% end %>
            </li>
            <li>
              <%= link_to reviews_path, data: {"turbolinks" => false} do %>
                <i class="glyphicon glyphicon-comment" aria-hidden="true">口コミ一覧</i>
              <% end %>
            </li>
            <li>
              <%= link_to new_contact_path, data: {"turbolinks" => false} do %>
                <i class="glyphicon glyphicon-envelope" aria-hidden="true">質問</i>
              <% end %>
            </li>
            <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="glyphicon glyphicon-log-out" aria-hidden="true">ログアウト</i>
                <% end %>
            </li>
          <% elsif admin_signed_in? %>
            <li><%=link_to 'ストレッチ一覧', admins_stretchs_path,data: {"turbolinks" => false} %></li>
            <li><%= link_to '会員一覧', admins_users_path,data: {"turbolinks" => false} %></li>
            <li><%=link_to 'カテゴリ一覧', admins_categorys_path,data: {"turbolinks" => false} %></li>
            <li><%=link_to '質問一覧', admins_contacts_path,data: {"turbolinks" => false} %></li>
            <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete,data: {"turbolinks" => false} %></li>
          <% else %>
            <li>
              <%= link_to about_path,data: {"turbolinks" => false} do %>
                <i class="glyphicon glyphicon-link" aria-hidden="true">紹介</i>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path,data: {"turbolinks" => false} do %>
                <i class="glyphicon glyphicon-new-window" aria-hidden="true">新規登録</i>
              <% end %>
            </li>
            <li>
              <%= link_to  new_user_session_path,data: {"turbolinks" => false} do%>
               <i class="glyphicon glyphicon-log-in" aria-hidden="true">ログイン</i>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="toggle_btn">
      <span></span>
      <span></span>
      <span></span>
    </div>
 　 <div id="mask"></div>
  </div>
</header>


