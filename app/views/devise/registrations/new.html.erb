<div class='container'>
  <div class='row'>
    <div class='col-md-4 col-md-offset-4'>
      <h2><i class='fa fa-address-card'></i>新規会員登録</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      <tbody>
        <tr>
          <div class='form-group row'>
            <div class='field'>
              <td><%= f.label '名前(姓・名)' %></td><br>
              <td><div class='col-md-6'>
                <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name",class:"form-control" %>
                  </div>
                  <div class='col-md-6'>
                    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",class:"form-control form-inline"%>
                  </div>
               </td>
            </div>
          </div>
        </tr>

        <tr>
          <div class='form-group row'>
            <div class='field'>
              <td><%= f.label '名前(カナ姓・カナ名)' %></td><br>
              <td><div class='col-md-6'>
                    <%= f.text_field :family_name_yomi, autofocus: true, autocomplete: "family_name_yomi",class:"form-control" %>
                  </div>
                  <div class='col-md-6'>
                    <%= f.text_field :first_name_yomi, autofocus: true, autocomplete: "first_name",class:"form-control form-inline"%>
                  </div>
              </td>
            </div>
          </div>
        </tr>

        <tr>
            <div class='field'>
              <td><%= f.label "電話番号" %></td><br>
              <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "address",class: "form-control" %></td>
            </div>
          </tr>

          <tr>
            <div class='field'>
              <td><%= f.label "メールアドレス" %></td><br>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control"%></td>
            </div>
          </tr>

          <tr>
            <div class='field'>
              <td><%= f.label "パスワード" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
                <% end %>
              </td><br>
              <td><%= f.password_field :password, autocomplete: "new-password",class: "form-control" %></td>
            </div>
          </tr>

          <tr>
            <div class='field'>
              <td><%= f.label "パスワード(確認用)" %></td><br>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %></td>
            </div>
          </tr>

          <tr>
            <td>
              <div class='action'>
                <%= f.submit "新規会員登録",class: "btn-sm btn-success" %>
              </div>
            </td>
          </tr>
      </tbody>
      <% end %>
      <div class='finish-sign_up'>
          <h2><i class="glyphicon glyphicon-hand-right"></i>
              既に登録済みの方</h2>
              <sapn><%= render "devise/shared/links" %></sapn>
      </div>
    </div>
  </div>
</div>
